<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Size</th>
      <th>Home</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.category %></td>
        <td><%= room.size %></td>
        <td><%= room.home_id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

